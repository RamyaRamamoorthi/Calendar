#include <stdio.h>
#include <stdlib.h>
int get(int y){
int d;
d = (( (y-1) * 365)+  ( (y-1) / 4) - ((y-1) / 100)+  ( (y-1) / 400)) %7;
return d;
}
int main()
{
    printf("Enter the year\n");
    int y,i,j,day=0,start;
    scanf("%d",&y);

   char *a[]={"Jan","Feb","Mar","Apr","May","June","July","Aug","Sep","Oct","Nov","Dec"};
   int monthcount[]={31,28,31,30,31,30,31,31,30,31,30,31};

   if((y%4==0)&&(y%100!=0)||(y%400==0))
    monthcount[1]=29;
    start=get(y);
    ++start;
    for(i=0;i<12;printf("\n\n"),i++)
        {
        printf("----------------------%s------------------------\n",a[i]);
        printf("  Sun  Mon  Tue  Wed  Thu  Fri  Sat\n");

        for(day=0;day<start;day++){
            printf("     ");
        }
        for(j=1;j<=monthcount[i];j++)
            {
            printf("%5d",j);

            if(++day>6)
            {
                day=0;
                printf("\n");
            }
    start=day;
            }
         }
    return 0;
}
